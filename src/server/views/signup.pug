html
  head
    title Login
    meta(name="viewport", content="user-scalable=no,initial-scale=1,maximum-scale=1,minimum-scale=1,width=device-width")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
  body
  div.container
    div.form-group
    h1 Registro
    form(action="/signup" method="POST")
      div#login-form
      input.form-control(placeholder="Nombre de usuario" name="user")
      label(for="user") Ingresa tu nombre de usuario
      br
      input.form-control(placeholder="Contraseña" type="password" name="password")
      label(for="password") Ingresa tu contraseña
      br
      br
      button#login-btn.btn.btn-primary Enviar